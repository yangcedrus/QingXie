<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ActivityLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/message_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/message_item_image"
        android:layout_toEndOf="@id/message_item_image"
        android:layout_marginStart="30dp"
        android:singleLine="true"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/message_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/message_item_title"
        android:layout_below="@id/message_item_title"
        android:layout_alignBottom="@id/message_item_image"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical" />

</RelativeLayout>