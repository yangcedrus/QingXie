<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/home_recyclerView_header">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="#805f5f5f"
        android:gravity="center_horizontal"
        android:layout_alignStart="@id/home_viewPager"
        android:layout_alignEnd="@id/home_viewPager"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/home_viewPager_textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="2"
            android:textSize="@dimen/title_size"
            android:textColor="#ffffff"
            android:layout_gravity="left"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/home_viewPager_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>