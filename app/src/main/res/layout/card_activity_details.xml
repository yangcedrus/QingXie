<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:text="武汉理工大学管理学院"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_info"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/card_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/card_info"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="1天" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:clickable="true"
                android:id="@+id/card_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收藏活动"
                android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:clickable="true"
                android:id="@+id/card_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="详细信息"
                android:drawableLeft="@drawable/ic_detail_black_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:clickable="true"
                android:id="@+id/card_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我要报名"
                android:drawableLeft="@drawable/ic_check_black_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>