<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ActivityLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/favourite_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/favourite_item_image"
            android:background="@color/TitleBackground"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/favourite_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/favourite_item_title"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/favourite_item_title"
            android:layout_marginEnd="25dp"
            android:background="@color/TitleBackground"
            android:src="@drawable/ic_expand_more_black_24dp" />

        <TextView
            android:id="@+id/favourite_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/favourite_item_image"
            android:layout_alignStart="@+id/favourite_item_title"
            android:layout_below="@+id/favourite_item_title"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp" />

    </RelativeLayout>

</LinearLayout>